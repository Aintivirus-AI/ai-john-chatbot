{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "lib": ["ES2023"],
    "moduleResolution": "NodeNext",
    "rootDir": ".",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitOverride": true,
    "types": ["node"]
  },
  "include": ["server/src/**/*", "web/widget/**/*"],
  "exclude": ["node_modules", "dist", "server/src/scripts/**/*"]
}

